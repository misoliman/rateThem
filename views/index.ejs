<% layout("layout/boilerplate") %>
    <link rel="stylesheet" href="/styles/styles.css">

    <h2 class="mb-3">All Restaurants</h2>

    <div class="mb-4">
        <a href="/restaurants/new" class="card-link btn btn-primary">Add New Restaurants</a>

    </div>

    <% for(let restaurant of restaurants){ %>


        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= restaurant.image[0].url %>" alt="" id="card-image-sizing-all">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= restaurant.name %>
                        </h5>
                        <p class="card-text">
                            <%= restaurant.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= restaurant.location %>
                            </small>
                        </p>
                        <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Veiw Restaurant</a>
                    </div>
                </div>
            </div>
        </div>


        <% }%>